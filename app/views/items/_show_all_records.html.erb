<div>
	<!-- add task button -->
	<%= link_to items_add_path(:list_id=>params[:id]), remote: true, class: 'btn btn-success' do%>
		<i class="glyphicon glyphicon-plus"></i> Add Task
	<% end %>	
	
	
	<div class="table-responsive">
	  <table class="table">
	      <thead>
	      <tr>
	          <th><%= sortable "title"%></th>
	          <th><%= sortable "work_time"%></th>
	          <th>Due Date</th>
        
	      </tr>
	      </thead>
	      <tbody>
	  <% @items.each do |item|%>
	  <tr>
        <% if item.completed? %>
	      <td id="new_title"><%= link_to simple_format("#{item.title}"), 				items_show_single_record_path(:id =>item.id, :list_id=>params[:id]), remote: true%></td>
	      <% else %>
	      
	      <td><%= link_to simple_format("#{item.title}"), 				items_show_single_record_path(:id =>item.id, :list_id=>params[:id]), remote: true%></td>
	      <% end %>
	      
	      
	      
	      
	      <td><%= item.work_time.to_s << ' hrs'%></td>
	      <td><%= item.due_date%></td>
    
	  </tr>
	  <% end %>
	      </tbody>
	  </table>	  
	</div>
</div>
