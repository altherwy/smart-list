<!-- <div calss="modal fade">-->
<div class="modal-dialog modal-content modal-body" id="general-form">
<%= simple_format(@item.title) %>
<%= @item.due_date %>
<% wor = simple_format(@item.work_time.to_s << ' hrs') %>
<%= wor %>
<% isCompleted = @item.completed %>
<% if (isCompleted == true) %>
<%= simple_format("The task is completed") %>
<% else %>
<%= simple_format("The task is not completed") %>
<% end %>
<%= link_to  items_update_path(:id=>@item.id), remote: true, class: 'btn btn-success' do%>
<i class="glyphicon glyphicon-pencil"></i> Update
<% end %>
<%= " " %>
<%= link_to items_show_all_records_path(:id=>@item.id, :list_id=>params[:list_id]),id: "delete-item", remote: true, method: :delete,  class: 'btn btn-danger' do %>
<i class="glyphicon glyphicon-minus"></i> Delete
<% end %>
</div>
