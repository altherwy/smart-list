<div class="container">
<%= simple_format(@item.title) %>
<%= @item.creation_date %>
</br>
<%= @item.expiration_date %>
<%= simple_format(@item.work_time.to_s) %>
<% isCompleted = @item.completed %>
<% if (isCompleted == true) %>
<%= simple_format("The task is completed") %>
<% else %>
<%= simple_format("The work is not completed") %>
<% end %>
<%= link_to "Update", root_path, class: 'btn btn-success' %>
<%= link_to root_path(:id=>@item.id), method: :delete,  class: 'btn btn-danger' do %>
<i class="glyphicon glyphicon-minus"></i> Delete
<% end %>
</div>
